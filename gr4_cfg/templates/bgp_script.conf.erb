#!/bin/sh

DATE=`date '+%Y-%m-%d %H:%M:%S'`

echo "Output of BGP ping script launched on <%= @node_name %> at $DATE"

echo "################################################"

<%- if @id == 2 -%>

ping6 -q -c1 fd00:200::b > /dev/null

if [ $? -ne 0 ]
then
    echo "Ping error from <%= @node_name %> to belnetb on fd00:200::b"
else
    echo "OK"
fi

<%- end -%>

<%- if @id == 4 -%>

ping6 -q -c1 fd00:200::b > /dev/null

if [ $? -ne 0 ]
then
    echo "Ping error from <%= @node_name %> to belneta on fd00:300::b"
else
    echo "OK"
fi

<%- end -%>

echo "################################################"