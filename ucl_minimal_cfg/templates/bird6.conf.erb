<%# ERB template https://puppet.com/docs/puppet/5.3/lang_template_erb.html -%>
router id <%= @routing_id %>;

protocol kernel {
 	learn;
	scan time 20;
	export all;
}

protocol device {
	scan time 10;
}

protocol ospf {

	area 0.0.0.0 {
		<%- @ospfv3["hello_itfs"].each do |val| -%>
			interface "<%= val %>" {
				hello 1;
				dead 3;
			};
		<%- end -%>
		<%- @ospfv3["stub_itfs"].each do |val| -%>
			interface "<%= val %>" {
				stub 1;
			};
		<%- end -%>
    };
}

<%- if @bgp["state"] != "None" -%>
/* Define one bgp session block per peer */
protocol bgp bgp_provider {
	local as 4;
	neighbor <%= @bgp["neighbor_ip"] %> as <%= @bgp["neighbor_as"] %>;
	import all;
	export all;
}
<%- end -%>
