#!/bin/sh
######################################################################
#                         Static routes and ips                      #
######################################################################

<%- @static_routes["interfaces"].each do |val| -%>
  ip link set dev <%= @val["interface"] %> up
  ip address add dev <%= @val["interface"] %> <%= @prefix_b %>:<%= @GROUPNUMBER %>:<%= @val["route"] %>::<%= @id %>/64
  ip address add dev <%= @val["interface"] %> <%= @prefix_a %>:<%= @GROUPNUMBER %>:<%= @val["route"] %>::<%= @id %>/64

<%- end -%>

<%- if @id == 2 -%>
ip link set dev belnetb up
ip address add dev belnetb <%= @prefix_b %>::<%= @GROUPNUMBER %>/64

<%- elsif @id == 4 -%>
ip link set dev belneta up
ip address add dev belneta <%= @prefix_a %>::<%= @GROUPNUMBER %>/64

<%- end -%>
